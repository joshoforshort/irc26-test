// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  emailVerified DateTime?    // ‚Üê add this line
  gcUsername    String?
  createdAt     DateTime     @default(now())
  pledges       Pledge[]
  submissions   Submission[]
  accounts      Account[]
  sessions      Session[]
  editTokens    EditToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EditToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
}

enum CacheType {
  UNDECIDED
  TRADITIONAL
  MULTI
  MYSTERY
  LETTERBOX
  WHERIGO
  VIRTUAL
}

enum CacheSize {
  UNDECIDED
  MICRO
  SMALL
  REGULAR
  LARGE
  OTHER
}

enum AUState {
  ACT
  NSW
  NT
  QLD
  SA
  TAS
  VIC
  WA
}

enum PledgeStatus {
  CONCEPT
  HIDDEN
}

model Pledge {
  id            String         @id @default(cuid())
  userId        String?
  user          User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  gcUsername    String
  title         String?
  cacheType     CacheType
  cacheSize     CacheSize
  approxSuburb  String
  approxState   AUState
  conceptNotes  String?
  images        Json?
  status        PledgeStatus  @default(CONCEPT)
  createdAt     DateTime      @default(now())
  submission    Submission?
}

model Submission {
  id            String     @id @default(cuid())
  pledgeId      String     @unique
  pledge        Pledge     @relation(fields: [pledgeId], references: [id], onDelete: Cascade)
  userId        String?
  user          User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  gcUsername    String
  gcCode        String     @unique
  cacheName     String
  suburb        String
  state         AUState
  difficulty    Float
  terrain       Float
  type          CacheType
  hiddenDate    DateTime
  notes         String?
  images        Json?
  createdAt     DateTime   @default(now())
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String?
  actorEmail String?
  action     String
  targetId   String
  targetKind String
  before     Json?
  after      Json?
  createdAt  DateTime @default(now())
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}





